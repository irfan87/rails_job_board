<div>
	<h2>Jobs List</h2>
	<% if @jobs.exists? %>
	<ul>
		<% @jobs.each do |job| %>
		<li>
			<%= link_to job.job_title, job_path(job) %>
			<%= link_to 'Delete this job', job_path(job), method: :delete, data: {confirm: 'Are you sure want to delete this job?'} %>
		</li>
		<% end %>
	</ul>
	<% else %>
		<p>
			There is no job posts
		</p>
	<% end %>
</div>